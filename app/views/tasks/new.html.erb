<h1>New Task</h1>
<%= form_with model: @task do |f| %>
  <div class="mt-3">
    <%= f.label :title, class: "d-block" %>
    <%= f.text_field :title %>
  </div>
  
  <div class="mt-3">
    <%= f.label :description, class: "d-block" %>
    <%= f.text_area :description %>
  </div>

  <div class="mt-3">
    <%= f.label :status %>
    <%= f.select :status, ["open", "in_progress", "done"], include_blank: false %>
  </div>

  <div class="mt-3">
    <%= f.submit "Create" %>
  </div>
<% end %>
